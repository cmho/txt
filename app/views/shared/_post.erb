<div class="post">
	<div class="post-header">
		<div class="post-author">
			<span class="displayname"><%= post.user.display_name %></span> <%= link_to "@#{post.user.username}", user_path(post.user.username), class: 'userlink' %>
		</div>
		<div class="post-date">
			<%= time_ago_in_words(post.created_at) %> ago
		</div>
	</div>
	<div class="post-content">
		<%= post.content %>
	</div>
	<div class="post-footer">
		<div class="post-likes">
			<b>Likes:</b> <%= post.likes.length %> <%= link_to "Like?", like_post_url(username: post.user.id, post_id: post.id), class: 'btn btn-xs btn-primary likebtn' %>
		</div>
	</div>
</div>